{
  "name": "superftp",
  "productName": "superftp",
  "version": "1.0.0",
  "description": "My Electron application description",
  "main": "src/index.js",
  "scripts": {
    "start": "electron-forge start",
    "watch:css": "npx tailwindcss -i ./src/index.css -o ./src/dist/index.css --watch",
    "build:css": "npx tailwindcss -i ./src/index.css -o ./src/dist/index.css",
    "build:win": "npx electron-packager --overwrite ./ --platform=win32 --arch=x64 --out=dist --asar --icon=src/images/icon.ico",
    "build:mac-arm": "npx electron-packager --overwrite ./ --platform=darwin --arch=arm64 --out=dist --asar --icon=src/images/icon.ico",
    "build:mac-x64": "npx electron-packager --overwrite ./ --platform=darwin --arch=x64 --out=dist --asar --icon=src/images/icon.ico",
    "lint": "echo \"No linting configured\""
  },
  "build": {
    "appId": "com.ayham.superftp",
    "icon": "./src/dist/icon.png",
    "win": {
      "target": [
        "portable"
      ]
    },
    "portable": {
      "artifactName": "superftp.exe"
    },
    "directories": {
      "output": "./output",
      "app": "./",
      "buildResources": "./buildResources"
    }
  },
  "keywords": [],
  "author": {
    "name": "ayham",
    "email": "ayhamgm81@gmail.com"
  },
  "license": "MIT",
  "dependencies": {
    "@material-tailwind/html": "^2.0.0",
    "electron-squirrel-startup": "^1.0.0",
    "ftpd": "^0.2.16",
    "ip": "^2.0.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.4",
    "@electron-forge/maker-deb": "^6.0.4",
    "@electron-forge/maker-rpm": "^6.0.4",
    "@electron-forge/maker-squirrel": "^6.0.4",
    "@electron-forge/maker-zip": "^6.0.4",
    "electron": "22.0.3",
    "electron-builder": "^23.6.0",
    "electron-packager": "^17.1.1",
    "electron-winstaller": "^5.1.0",
    "tailwindcss": "^3.2.4"
  }
}
